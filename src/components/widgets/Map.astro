---
import LeafletMap from '~/components/widgets/MapComponent.jsx';

interface Marker {
  lat: number;
  lon: number;
  popupText?: string;
}

interface Props {
  lat: number;
  lon: number;
  zoom: number;
  markers: Marker[];
}

const { lat, lon, zoom, markers } = Astro.props;
---

<LeafletMap lat={lat} lon={lon} zoom={zoom} markers={markers} client:only />
